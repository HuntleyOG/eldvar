{
  "name": "eldvar",
  "version": "2.0.0",
  "private": true,
  "description": "Eldvar - Browser-based text MMO with turn-based combat",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel --filter \"./packages/*\" dev",
    "dev:backend": "pnpm --filter @eldvar/backend dev",
    "dev:frontend": "pnpm --filter @eldvar/frontend dev",
    "build": "pnpm --filter \"./packages/*\" build",
    "build:backend": "pnpm --filter @eldvar/backend build",
    "build:frontend": "pnpm --filter @eldvar/frontend build",
    "lint": "pnpm --filter \"./packages/*\" lint",
    "test": "pnpm --filter \"./packages/*\" test",
    "prisma:generate": "pnpm --filter @eldvar/backend prisma:generate",
    "prisma:migrate": "pnpm --filter @eldvar/backend prisma:migrate",
    "prisma:studio": "pnpm --filter @eldvar/backend prisma:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "mmo",
    "game",
    "rpg",
    "text-based",
    "turn-based"
  ],
  "author": "Eldvar Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
